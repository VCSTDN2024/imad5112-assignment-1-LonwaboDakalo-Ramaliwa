<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#e5e4e2"
    tools:context=".Foodplace">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:textSize="48sp"
        android:layout_marginBottom="10dp"
        android:text="Food Places" />

    <EditText
        android:id="@+id/foodplctxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textSize="28sp"
        android:gravity="center"
        android:hint="Enter Time period of the Day"/>


    <Button
        android:id="@+id/btnFoodSuggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:backgroundTint="#674846"
        android:text="Food Place Suggestions" />

    <TextView
        android:id="@+id/foodPlcDisp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:hint="Results"
        android:textSize="28sp"
        android:gravity="center"
        android:text="" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:backgroundTint="#674846"
        android:text="Clear" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:backgroundTint="#674846"
        android:text="Return To Home" />

    <Button
        android:id="@+id/btnExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:backgroundTint="#674846"
        android:text="Exit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/food_app_bg2" />


</LinearLayout>